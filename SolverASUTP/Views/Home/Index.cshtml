        <script>
            const ogr1 = document.querySelector(".ogr1");
            const ogr2 = document.querySelector(".ogr2");
            const ogr3 = document.querySelector(".ogr3");

            const N = document.querySelector(".N");
            const L = document.querySelector(".L");

            const T1Kol = document.querySelector(".T1Kol");
            const T2Kol = document.querySelector(".T2Kol");
            const T3Kol = document.querySelector(".T3Kol");

            ogr1.value = T1Kol.value * N.value;
            ogr2.value = T2Kol.value * N.value;
            ogr3.value = T3Kol.value * N.value;

            T1Kol.addEventListener("change", (e) => {
                ogr1.value = e.target.value * N.value;
            });

            T2Kol.addEventListener("change", (e) => {
                ogr2.value = e.target.value * N.value;
            });

            T3Kol.addEventListener("change", (e) => {
                ogr3.value = e.target.value * N.value;
            });


            N.addEventListener("change", (e) => {
                ogr1.value = e.target.value * T1Kol.value;
                ogr2.value = e.target.value * T2Kol.value;
                ogr3.value = e.target.value * T3Kol.value;
            });

        </script>
       